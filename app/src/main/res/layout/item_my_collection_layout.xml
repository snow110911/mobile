<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="21dp"
        android:paddingTop="13dp"
        android:paddingRight="21dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/collect_user_img_header"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/header" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp">

                <TextView
                    android:id="@+id/collect_user_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="浅蓝色的殇"
                    android:textColor="#242424"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/collect_user_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="2020-11-3"
                    android:textColor="#9f9f9f"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/collect_user_postContent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <GridLayout
            android:id="@+id/collect_user_gridlayout_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingLeft="-4.5dp"
            android:paddingRight="-4.5dp"
            android:columnCount="3"
            android:visibility="gone">
            <com.example.project.view.SquareImageView
                android:layout_width="0dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:src="@color/cardview_dark_background"/>
            <com.example.project.view.SquareImageView
                android:layout_width="0dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:src="@color/cardview_dark_background"/>
            <com.example.project.view.SquareImageView
                android:layout_width="0dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:src="@color/cardview_dark_background"/>
        </GridLayout>

        <TextView
        android:id="@+id/collect_user_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:visibility="gone"
        android:textColor="#9f9f9f"
        android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/collect_user_img_comment"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/comment" />

                <TextView
                    android:id="@+id/collect_user_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="0"
                    android:textColor="#161616"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/collect_user_img_collect"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/collect" />

                <TextView
                    android:id="@+id/collect_user_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="0"
                    android:textColor="#161616"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/collect_user_img_like"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/dianzan" />

                <TextView
                    android:id="@+id/collect_user_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="0"
                    android:textColor="#161616"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#f5f5f4" />
</LinearLayout>